<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mascota"
            type="com.example.veterinaria.classes.Mascota" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="432dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="217dp"
                android:layout_height="32dp"
                android:text="Ficha Medica"
                app:layout_constraintBottom_toTopOf="@+id/mascota_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.039"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.375" />

            <ImageView
                android:id="@+id/mascota_image"
                android:layout_width="396dp"
                android:layout_height="268dp"
                app:foto="@{mascota.foto}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.603" />

            <TextView
                android:id="@+id/mascota_name"
                android:layout_width="397dp"
                android:layout_height="37dp"
                android:text='@{"Nombre: " + String.valueOf(mascota.nombre)}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.121" />

            <TextView
                android:id="@+id/mascota_peso"
                android:layout_width="236dp"
                android:layout_height="18dp"
                android:text='@{"Peso: " + String.valueOf(mascota.peso) + " Kg"}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mascota_fecha"
                app:layout_constraintVertical_bias="0.157" />

            <TextView
                android:id="@+id/mascota_fecha"
                android:layout_width="236dp"
                android:layout_height="18dp"
                android:text='@{"Fecha: " + String.valueOf(mascota.fechaNacimiento)}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/mascota_image"
                app:layout_constraintVertical_bias="0.212" />


            <!-- Add other views as needed -->

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>